<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorHintsWhite"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingBottom="10dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/org_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageView"
        android:padding="5dp"
        android:text="Organización"
        android:textSize="20dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <TextView
        android:id="@+id/org_dir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/org_name"
        android:layout_toEndOf="@+id/textView13"
        android:padding="5dp"
        android:text="Dirección"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/org_webSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/org_dir"
        android:layout_toEndOf="@+id/textView13"
        android:padding="5dp"
        android:text="@string/common_signin_button_text_long"
        android:textSize="12dp"
        tools:text="f" />

    <Button
        android:id="@+id/seleccionar_organizacion"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/org_name"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Seleccionar"
        android:textColor="@color/colorHintsWhite"
        android:textSize="8dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/org_dir"
        android:padding="5dp"
        android:text="Teléfono:"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/org_webSite"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/org_name"
        android:padding="5dp"
        android:text="Dirección:"
        android:textSize="12dp" />


</RelativeLayout>